#!/usr/bin/env bash
set -e
if [[ ! -d "/home/barrachi/datos/aplicaciones/docencia/latex-test-shuffler" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/barrachi/datos/aplicaciones/docencia/latex-test-shuffler")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/barrachi/datos/aplicaciones/docencia/latex-test-shuffler" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/barrachi/datos/aplicaciones/docencia/latex-test-shuffler/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/barrachi/datos/aplicaciones/docencia/latex-test-shuffler/.envrc" "/home/barrachi/datos/aplicaciones/docencia/latex-test-shuffler/.direnv"/*.rc
