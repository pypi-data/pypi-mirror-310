<odoo>
  <data>

    <record id="fleet_vehicle_battery_size_type_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.battery.size.view.form</field>
        <field name="model">fleet.vehicle.battery.size</field>
        <field name="arch" type="xml">
            <form string="Vehicle Battery Sizes">
                <group>
                    <field name="battery_size"/>
                </group>
            </form>
        </field>
    </record>
    <record id="fleet_vehicle_battery_size_type_view_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.battery.size.view.tree</field>
        <field name="model">fleet.vehicle.battery.size</field>
        <field name="arch" type="xml">
            <tree>
                <field name="battery_size" class="text-left"/>
            </tree>
        </field>
    </record>

    <record id="fleet_vehicle_battery_size_type_action" model="ir.actions.act_window">
        <field name="name">Vehicle Battery Sizes</field>
        <field name="res_model">fleet.vehicle.battery.size</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new car Battery Size Type (kWh)
            </p>
        </field>
    </record>

    <menuitem id="fleet_vehicle_battery_size_type" parent="fleet.fleet_configuration" action="fleet_vehicle_battery_size_type_action" sequence="88"/>
  </data>
</odoo>