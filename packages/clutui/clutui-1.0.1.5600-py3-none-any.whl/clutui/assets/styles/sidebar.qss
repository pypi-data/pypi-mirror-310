QPushButton {
    text-align: left;
    padding-left: 8px;
    border: none;
    border-radius: 4px;
    background-color: transparent;
    color: #ffffff;
    transition: padding-left 0.2s;
}

QPushButton:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

QPushButton:pressed {
    background-color: rgba(255, 255, 255, 0.2);
}

/* 隐藏文本 */
QPushButton {
    padding-left: 8px;
    text-align: center;
} 