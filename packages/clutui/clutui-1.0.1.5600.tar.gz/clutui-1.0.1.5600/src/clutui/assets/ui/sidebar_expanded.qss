QPushButton {
    text-align: left;
    padding-left: 8px;
    border: none;
    border-radius: 4px;
    background-color: transparent;
    color: #ffffff;
}

QPushButton:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

QPushButton:pressed {
    background-color: rgba(255, 255, 255, 0.2);
}

