{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "export conda env",
            "type": "shell",
            "command": "powershell -Command \"conda env export --from-history --no-builds | Select-String -Pattern '^(?!prefix).*' > dev_environment.yml\"",
        },
        {
            "label": "build with flit",
            "type": "shell",
            "command": "flit build"
        },
        {
            "label": "upload to testpypi",
            "type": "shell",
            "command": "twine upload --repository testpypi dist/* -u __token__ -p",
            "args": [
                "${input:twineToken}"
            ]
        },
        {
            "label": "upload to pypi",
            "type": "shell",
            "command": "twine upload dist/* -u __token__ -p",
            "args": [
                "${input:pypiToken}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "pypiToken",
            "type": "promptString",
            "description": "Enter your PyPI token"
        }
    ]
}