<odoo>
<!-- Workflow -->
<record id="general_audit_ws_cbbbaf4_viewer_group" model="res.groups">
    <field name="name">Viewer</field>
    <field name="category_id" ref="general_audit_ws_cbbbaf4_workflow_module_category" />
</record>

<record id="general_audit_ws_cbbbaf4_user_group" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="general_audit_ws_cbbbaf4_workflow_module_category" />
    <field
            name="implied_ids"
            eval="[(4, ref('general_audit_ws_cbbbaf4_viewer_group'))]"
        />
</record>

<record id="general_audit_ws_cbbbaf4_validator_group" model="res.groups">
    <field name="name">Validator</field>
    <field name="category_id" ref="general_audit_ws_cbbbaf4_workflow_module_category" />
    <field
            name="implied_ids"
            eval="[(4, ref('general_audit_ws_cbbbaf4_user_group'))]"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

<!-- Data Ownership -->
<record id="general_audit_ws_cbbbaf4_company_group" model="res.groups">
    <field name="name">Company</field>
    <field name="category_id" ref="general_audit_ws_cbbbaf4_data_module_category" />
</record>

<record id="general_audit_ws_cbbbaf4_company_child_group" model="res.groups">
    <field name="name">Company and All Child Companies</field>
    <field name="category_id" ref="general_audit_ws_cbbbaf4_data_module_category" />
    <field
            name="implied_ids"
            eval="[(4, ref('general_audit_ws_cbbbaf4_company_group'))]"
        />
</record>

<record id="general_audit_ws_cbbbaf4_all_group" model="res.groups">
    <field name="name">All</field>
    <field name="category_id" ref="general_audit_ws_cbbbaf4_data_module_category" />
    <field
            name="implied_ids"
            eval="[(4, ref('general_audit_ws_cbbbaf4_company_child_group'))]"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
</odoo>
