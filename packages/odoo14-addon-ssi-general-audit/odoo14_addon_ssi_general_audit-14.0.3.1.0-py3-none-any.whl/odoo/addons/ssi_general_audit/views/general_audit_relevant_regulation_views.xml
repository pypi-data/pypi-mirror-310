<odoo>

    <record id="general_audit_relevant_regulation_view_search" model="ir.ui.view">
        <field name="name">general_audit_relevant_regulation - search</field>
        <field name="model">general_audit_relevant_regulation</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_relevant_regulation_view_tree" model="ir.ui.view">
        <field name="name">general_audit_relevant_regulation - tree</field>
        <field name="model">general_audit_relevant_regulation</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
            </data>
        </field>
    </record>

    <record id="general_audit_relevant_regulation_view_form" model="ir.ui.view">
        <field name="name">general_audit_relevant_regulation - form</field>
        <field name="model">general_audit_relevant_regulation</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[1]" position="before">
                    <page name="item" string="Items">
                        <field name="item_ids">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle" />
                                <field name="regulation_id" invisible="1" />
                                <field name="name" />
                                <field
                                    name="parent_id"
                                    domain="[('regulation_id','=',regulation_id)]"
                                />
                                <field name="description" />
                            </tree>
                            <form>
                                <group name="item" colspan="4" col="2">
                                    <field name="sequence" />
                                    <field name="name" />
                                    <field name="parent_id" />
                                    <field name="description" />
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_relevant_regulation_action" model="ir.actions.act_window">
        <field name="name">Relevant Regulations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_relevant_regulation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_relevant_regulation_menu"
        name="Relevant Regulations"
        parent="menu_configuration_general_audit"
        action="general_audit_relevant_regulation_action"
        sequence="110"
        groups="general_audit_relevant_regulation_group"
    />

</odoo>
