<odoo>

    <record id="client_financial_ratio_view_search" model="ir.ui.view">
        <field name="name">client_financial_ratio - search</field>
        <field name="model">client_financial_ratio</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="client_financial_ratio_view_tree" model="ir.ui.view">
        <field name="name">client_financial_ratio - tree</field>
        <field name="model">client_financial_ratio</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="before">
                    <field name="sequence" widget="handle" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="client_financial_ratio_view_form" model="ir.ui.view">
        <field name="name">client_financial_ratio - form</field>
        <field name="model">client_financial_ratio</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="sequence" />
                    <field name="category" />
                </xpath>
                <xpath expr="//notebook/page[1]" position="before">
                    <page name="code" string="Code">
                        <field name="python_code" widget="ace" />
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="client_financial_ratio_action" model="ir.actions.act_window">
        <field name="name">Financial Ratio</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">client_financial_ratio</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="client_financial_ratio_menu"
        name="Financial Ratio"
        parent="menu_configuration_general_audit"
        action="client_financial_ratio_action"
        sequence="110"
        groups="client_financial_ratio_group"
    />

</odoo>
