<odoo>
<record id="client_trial_balance_standard_detail_view_search" model="ir.ui.view">
    <field name="name">client_trial_balance.standard_detail - search</field>
    <field name="model">client_trial_balance.standard_detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <search />
    </field>
</record>

<record id="client_trial_balance_standard_detail_view_tree" model="ir.ui.view">
    <field name="name">client_trial_balance.standard_detail - tree</field>
    <field name="model">client_trial_balance.standard_detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <tree>
            <field name="sequence" invisible="1" />
            <field name="type_id" />
            <field name="currency_id" invisible="1" />
            <field name="opening_balance" />
            <field name="debit" />
            <field name="credit" />
            <field name="balance" />
        </tree>
    </field>
</record>

<record id="client_trial_balance_standard_detail_view_form" model="ir.ui.view">
    <field name="name">client_trial_balance.standard_detail - form</field>
    <field name="model">client_trial_balance.standard_detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="header" colspan="4" col="2">
                    <group name="header1" colspan="1" col="2">
                        <field name="sequence" invisible="1" />
                        <field name="type_id" />
                        <field name="currency_id" invisible="1" />
                    </group>
                    <group name="header2" colspan="1" col="2">
                        <field name="balance" />
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>
