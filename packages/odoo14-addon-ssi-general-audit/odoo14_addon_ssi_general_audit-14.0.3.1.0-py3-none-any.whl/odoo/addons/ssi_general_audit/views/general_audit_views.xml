<odoo>

<record id="general_audit_view_search" model="ir.ui.view">
    <field name="name">general_audit -  form</field>
    <field name="model">general_audit</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="general_audit_view_tree" model="ir.ui.view">
    <field name="name">general_audit -  tree</field>
    <field name="model">general_audit</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="title" optional="hide" />
                <field name="partner_id" widget="many2one_avatar" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="previous_date_start" optional="hide" />
                <field name="previous_date_end" optional="hide" />
                <field name="interim_date_start" optional="hide" />
                <field name="interim_date_end" optional="hide" />
                <field name="accountant_id" />
                <field name="account_type_set_id" />
                <field name="financial_accounting_standard_id" />
                <field name="opinion_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="general_audit_view_form" model="ir.ui.view">
    <field name="name">general_audit -  form</field>
    <field name="model">general_audit</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath
                    expr="/form/sheet/div[@class='oe_left']/div[@class='oe_title']/h1"
                    position="after"
                >
                <h2>
                    <label for="opinion_id" string="Opinion:" />
                    <field name="opinion_id" class="oe_inline" />
                </h2>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field
                        name="partner_id"
                        domain="[('parent_id','=',False),('is_company','=',True)]"
                        widget="many2one_avatar"
                    />
                <field name="financial_accounting_standard_id" />
                <field name="currency_id" />
                <field name="account_type_set_id" />
                <field name="accountant_id" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <label for="date_start" string="Audit Period" />
                <div class="o_row">
                    <field name="date_start" class="oe_inline" />
                    <span class="oe_inline">To</span>
                    <field name="date_end" class="oe_inline" />
                </div>
                <field name="need_previous" widget="boolean_toggle" />
                <label
                        for="previous_date_start"
                        string="Previous Audit Period"
                        attrs="{'invisible': [('need_previous', '=', False)]}"
                    />
                <div
                        class="o_row"
                        attrs="{'invisible': [('need_previous', '=', False)]}"
                    >
                    <field
                            name="previous_date_start"
                            class="oe_inline"
                            attrs="{'required': [('need_previous', '=', True)]}"
                        />
                    <span class="oe_inline">To</span>
                    <field
                            name="previous_date_end"
                            class="oe_inline"
                            attrs="{'required': [('need_previous', '=', True)]}"
                        />
                </div>
                <field name="need_interim" widget="boolean_toggle" />
                <label
                        for="interim_date_start"
                        string="Interim Audit Period"
                        attrs="{'invisible': [('need_interim', '=', False)]}"
                    />
                <div
                        class="o_row"
                        attrs="{'invisible': [('need_interim', '=', False)]}"
                    >
                    <field
                            name="interim_date_start"
                            class="oe_inline"
                            attrs="{'required': [('need_interim', '=', True)]}"
                        />
                    <span class="oe_inline">To</span>
                    <field
                            name="interim_date_end"
                            class="oe_inline"
                            attrs="{'required': [('need_interim', '=', True)]}"
                        />
                </div>
            </xpath>
            <xpath expr="//group[@name='header_center']" position="inside">
                <field name="title" />
            </xpath>
            <xpath expr="//page[@name='note']" position="before">
                <page name="other" string="Other Information">
                    <group name="other_1" colspan="4" col="2">
                        <group name="other_1_1" colspan="1" col="2">
                            <field name="num_of_consecutive_audit_firm" />
                            <field name="num_of_consecutive_audit_accountant" />
                        </group>
                        <group name="other_1_2" colspan="1" col="2">
                            <field name="restatement_option" />
                            <field
                                    name="previous_audit_id"
                                    attrs="{'invisible':[('restatement_option','!=','internal')],'required':[('restatement_option','=','internal')]}"
                                    domain="[('id','!=',id),('partner_id','=',partner_id),('state','=','valid')]"
                                />
                            <field
                                    name="previous_audit"
                                    attrs="{'invisible':[('restatement_option','!=','external')],'required':[('restatement_option','=','external')]}"
                                />
                        </group>
                    </group>
                </page>
                <page name="trial_balance" string="Trial Balance">
                    <group name="trial_balance_1" colspan="4" col="2">
                        <field name="previous_trial_balance_id" string="# Previous" />
                        <field name="interim_trial_balance_id" string="# Interim" />
                        <field name="home_trial_balance_id" string="# Home Statement" />
                    </group>
                    <group name="trial_balance_2" colspan="4" col="2">
                        <field name="trial_balance_ids" colspan="2" nolabel="1" />
                    </group>
                </page>
                <page name="account_computation" string="Account &amp; Computation">
                    <group name="account_computation" colspan="4" col="2">
                        <field name="account_mapping_id" />
                    </group>
                    <button
                            name="action_reload_account"
                            string="Account"
                            type="object"
                            icon="fa-refresh"
                            class="oe_highlight"
                            style="margin-right:4px"
                            attrs="{'invisible':[('state','not in',['draft','open'])]}"
                        />
                    <field
                            name="detail_ids"
                            colspan="1"
                            col="2"
                            nolabel="1"
                            force_save="1"
                            context="{'default_partner_id': partner_id}"
                        />

                    <button
                            name="action_reload_standard_account"
                            string="Standard Account"
                            type="object"
                            icon="fa-refresh"
                            class="oe_highlight"
                            style="margin-right:4px"
                            attrs="{'invisible':[('state','not in',['draft','open'])]}"
                        />
                    <field name="account_type_ids" invisible="1" />
                    <field
                            name="standard_detail_ids"
                            colspan="1"
                            col="2"
                            nolabel="1"
                            force_save="1"
                        />
                    <field
                            name="group_detail_ids"
                            colspan="1"
                            col="2"
                            nolabel="1"
                            force_save="1"
                        />
                    <button
                            name="action_reload_computation"
                            string="Computation"
                            type="object"
                            icon="fa-refresh"
                            class="oe_highlight"
                            style="margin-right:4px"
                            attrs="{'invisible':[('state','not in',['draft','open'])]}"
                        />
                    <button
                            name="action_recompute_computation"
                            string="Computation Value"
                            type="object"
                            icon="fa-calculator"
                            class="oe_highlight"
                            attrs="{'invisible':[('state','not in',['draft','open'])]}"
                        />
                    <field
                            name="computation_ids"
                            colspan="1"
                            col="2"
                            nolabel="1"
                            force_save="1"
                        />
                </page>
                <page name="worksheet" string="Worksheets">
                    <group
                            name="worksheet_1"
                            colspan="4"
                            col="2"
                            string="Required Worksheet(s)"
                        >
                        <field
                                name="required_worksheet_type_ids"
                                colspan="2"
                                nolabel="1"
                            >
                            <tree>
                                <field name="name" />
                                <field name="code" />
                            </tree>
                        </field>
                    </group>
                    <group
                            name="worksheet_2"
                            colspan="4"
                            col="2"
                            string="Additional Worksheet(s)"
                        >
                        <field
                                name="additional_worksheet_type_ids"
                                colspan="2"
                                nolabel="1"
                            >
                            <tree>
                                <field name="name" />
                                <field name="code" />
                            </tree>
                        </field>
                    </group>
                    <group name="worksheet_3" colspan="4" col="2" string="Worksheet(s)">
                        <field name="worksheet_control_ids" colspan="2" nolabel="1">
                            <tree>
                                <field name="type_id" />
                                <field name="required" />
                                <field name="worksheet_id" />
                                <field name="user_id" />
                                <field name="conclusion_id" />
                                <field name="state" />
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="general_audit_action" model="ir.actions.act_window">
    <field name="name">General Audits</field>
    <field name="res_model">general_audit</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{
        'readonly_by_pass': True,
        'search_default_dom_draft':1,
        'search_default_dom_open':1,
        'search_default_dom_confirm':1,
        }
    </field>
</record>

<menuitem
        id="general_audit_sub_menu"
        name="General Audits"
        parent="menu_general_audit"
        action="general_audit_action"
        sequence="10"
        groups="general_audit_viewer_group"
    />


</odoo>
