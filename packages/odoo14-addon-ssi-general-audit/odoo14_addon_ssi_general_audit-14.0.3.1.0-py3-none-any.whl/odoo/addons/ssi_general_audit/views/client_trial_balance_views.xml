<odoo>

<record id="client_trial_balance_view_search" model="ir.ui.view">
    <field name="name">client_trial_balance form</field>
    <field name="model">client_trial_balance</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="client_trial_balance_view_tree" model="ir.ui.view">
    <field name="name">client_trial_balance tree</field>
    <field name="model">client_trial_balance</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="partner_id" widget="many2one_avatar" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="account_type_set_id" />
                <field name="trial_balance_type" />
            </xpath>
        </data>
    </field>
</record>

<record id="client_trial_balance_view_form" model="ir.ui.view">
    <field name="name">client_trial_balance form</field>
    <field name="model">client_trial_balance</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="general_audit_id" domain="[('state','=','open')]" />
                <field name="partner_id" widget="many2one_avatar" />
                <field name="currency_id" />
                <field name="account_type_set_id" />
                <field name="trial_balance_type" />
                <field name="allowed_type_ids" widget="many2many_tags" invisible="1" />

            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <label for="date_start" string="Audit Period" />
                <div class="o_row">
                    <field name="date_start" class="oe_inline" />
                    <span class="oe_inline">To</span>
                    <field name="date_end" class="oe_inline" />
                </div>
                <field name="need_previous" widget="boolean_toggle" />
                <label
                        for="previous_date_start"
                        string="Previous Audit Period"
                        attrs="{'invisible': [('need_previous', '=', False)]}"
                    />
                <div
                        class="o_row"
                        attrs="{'invisible': [('need_previous', '=', False)]}"
                    >
                    <field name="previous_date_start" class="oe_inline" />
                    <span class="oe_inline">To</span>
                    <field name="previous_date_end" class="oe_inline" />
                </div>
                <field name="need_interim" widget="boolean_toggle" />
                <label
                        for="interim_date_start"
                        string="Interim Audit Period"
                        attrs="{'invisible': [('need_interim', '=', False)]}"
                    />
                <div
                        class="o_row"
                        attrs="{'invisible': [('need_interim', '=', False)]}"
                    >
                    <field name="interim_date_start" class="oe_inline" />
                    <span class="oe_inline">To</span>
                    <field name="interim_date_end" class="oe_inline" />
                </div>
            </xpath>
            <xpath expr="//page[@name='note']" position="before">
                    <page
                        string="Detail"
                        name="details"
                        attrs="{'invisible': [('trial_balance_type','=','extrapolation')]}"
                    >
                        <button
                            name="action_reload_account"
                            type="object"
                            string="Account"
                            class="oe_highlight"
                            icon="fa-refresh"
                            states="open"
                            style="margin-right:4px"
                        />
                        <button
                            name="%(import_trial_balance_detail_action)d"
                            type="action"
                            string="Account"
                            class="oe_highlight"
                            icon="fa-upload"
                            states="open"
                        />
                        <field name="detail_ids" colspan="1" col="2" nolabel="1" />
                        <group name="details_1" colspan="4" col="2">
                            <field name="opening_debit" />
                            <field name="opening_credit" />
                            <field name="debit" />
                            <field name="credit" />
                            <field name="ending_debit" />
                            <field name="ending_credit" />
                        </group>
                    </page>
                    <page string="Standard Detail" name="standard_details">
                        <field
                            name="standard_detail_ids"
                            colspan="1"
                            col="2"
                            nolabel="1"
                            force_save="1"
                        />
                    </page>
                    <page string="Group Detail" name="group_details">
                        <field
                            name="group_detail_ids"
                            colspan="1"
                            col="2"
                            nolabel="1"
                            force_save="1"
                        />
                    </page>
                    <page string="Computation" name="computations">
                        <group name="computation_1">
                            <button
                                name="action_recompute_computation"
                                string="Computation"
                                type="object"
                                states="open"
                                class="oe_highlight"
                                icon="fa-calculator"
                            />
                        </group>
                        <field
                            name="computation_ids"
                            colspan="1"
                            col="2"
                            nolabel="1"
                            force_save="1"
                        />
                    </page>
            </xpath>
        </data>
    </field>
</record>

<record id="client_trial_balance_action" model="ir.actions.act_window">
    <field name="name">Trial Balances</field>
    <field name="res_model">client_trial_balance</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{
        'readonly_by_pass': True,
        'search_default_dom_draft':1,
        'search_default_dom_open':1,
        'search_default_dom_confirm':1,
        }
    </field>
</record>

<menuitem
        id="client_trial_balance_menu"
        name="Trial Balances"
        parent="menu_general_audit"
        action="client_trial_balance_action"
        sequence="30"
        groups="trial_balance_viewer_group"
    />

</odoo>
