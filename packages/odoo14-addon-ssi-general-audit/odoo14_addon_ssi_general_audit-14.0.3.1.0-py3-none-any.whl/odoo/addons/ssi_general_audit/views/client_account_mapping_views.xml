<odoo>

<record id="client_account_mapping_view_search" model="ir.ui.view">
    <field name="name">client_account_mapping form</field>
    <field name="model">client_account_mapping</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="client_account_mapping_view_tree" model="ir.ui.view">
    <field name="name">client_account_mapping tree</field>
    <field name="model">client_account_mapping</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="partner_id" widget="many2one_avatar" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="account_type_set_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="client_account_mapping_view_form" model="ir.ui.view">
    <field name="name">client_account_mapping form</field>
    <field name="model">client_account_mapping</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="general_audit_id" domain="[('state','=','open')]" />
                <field name="partner_id" widget="many2one_avatar" />
                <field name="currency_id" />
                <field name="account_type_set_id" />

            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <label for="date_start" string="Audit Period" />
                <div class="o_row">
                    <field name="date_start" class="oe_inline" />
                    <span class="oe_inline">To</span>
                    <field name="date_end" class="oe_inline" />
                </div>
                <field name="need_previous" widget="boolean_toggle" />
                <label
                        for="previous_date_start"
                        string="Previous Audit Period"
                        attrs="{'invisible': [('need_previous', '=', False)]}"
                    />
                <div
                        class="o_row"
                        attrs="{'invisible': [('need_previous', '=', False)]}"
                    >
                    <field name="previous_date_start" class="oe_inline" />
                    <span class="oe_inline">To</span>
                    <field name="previous_date_end" class="oe_inline" />
                </div>
                <field name="need_interim" widget="boolean_toggle" />
                <label
                        for="interim_date_start"
                        string="Interim Audit Period"
                        attrs="{'invisible': [('need_interim', '=', False)]}"
                    />
                <div
                        class="o_row"
                        attrs="{'invisible': [('need_interim', '=', False)]}"
                    >
                    <field name="interim_date_start" class="oe_inline" />
                    <span class="oe_inline">To</span>
                    <field name="interim_date_end" class="oe_inline" />
                </div>
            </xpath>
            <xpath expr="//page[@name='note']" position="before">
                <page name="mapping" string="Account Mappings">
                    <button
                            name="%(import_client_account_action)d"
                            type="action"
                            string="Accounts"
                            class="oe_highlight"
                            icon="fa-upload"
                            attrs="{'invisible':[('state','!=','open')]}"
                            style="margin-right:4px"
                        />
                    <button
                            name="action_open_account"
                            type="object"
                            string="Accounts"
                            class="oe_highlight"
                            icon="fa-bars"
                            attrs="{'invisible':[('state','!=','open')]}"
                        />
                    <field name="detail_ids">
                        <tree editable="top">
                            <field name="sequence" invisible="1" />
                            <field name="code" />
                            <field name="account_id" />
                            <field name="type_id" />
                            <field name="normal_balance" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="client_account_mapping_action" model="ir.actions.act_window">
    <field name="name">Client Account Mappings</field>
    <field name="res_model">client_account_mapping</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{
        'readonly_by_pass': True,
        'search_default_dom_draft':1,
        'search_default_dom_open':1,
        'search_default_dom_confirm':1,
        }
    </field>
</record>

<menuitem
        id="client_account_mapping_menu"
        name="Client Account Mappings"
        parent="menu_general_audit"
        action="client_account_mapping_action"
        sequence="20"
        groups="client_account_mapping_viewer_group"
    />

</odoo>
