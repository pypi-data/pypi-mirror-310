<odoo>
<record id="general_audit_computation_view_search" model="ir.ui.view">
    <field name="name">general_audit.computation - search</field>
    <field name="model">general_audit.computation</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <search />
    </field>
</record>

<record id="general_audit_computation_view_tree" model="ir.ui.view">
    <field name="name">general_audit.computation - tree</field>
    <field name="model">general_audit.computation</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <tree>
            <field name="computation_item_id" />
            <field name="previous_amount" string="Previous" />
            <field name="interim_amount" string="Interim" />
            <field name="extrapolation_amount" string="Extrapolation" />
            <field name="home_amount" string="Home Statement" />
            <field name="interim_avg_amount" string="Interim Avg." optional="hide" />
            <field
                    name="extrapolation_avg_amount"
                    string="Extrapolation Avg."
                    optional="hide"
                />
            <field
                    name="home_avg_amount"
                    string="Home Statement Avg."
                    optional="hide"
                />
        </tree>
    </field>
</record>

<record id="general_audit_computation_view_form" model="ir.ui.view">
    <field name="name">general_audit.computation - form</field>
    <field name="model">general_audit.computation</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="header" colspan="4" col="2">
                    <group name="header1" colspan="1" col="2">
                        <field name="computation_item_id" />
                    </group>
                    <group name="header2" colspan="1" col="2">
                        <field name="interim_amount" string="Interim" />
                        <field name="extrapolation_amount" string="Extrapolation" />
                        <field name="home_amount" string="Home Statement" />
                        <field name="previous_amount" string="Previous" />
                        <field
                                name="interim_avg_amount"
                                string="Interim Avg."
                                optional="hide"
                            />
                        <field
                                name="extrapolation_avg_amount"
                                string="Extrapolation Avg."
                                optional="hide"
                            />
                        <field
                                name="home_avg_amount"
                                string="Home Statement Avg."
                                optional="hide"
                            />
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>
