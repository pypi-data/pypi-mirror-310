<odoo>
<record id="general_audit_standard_detail_view_search" model="ir.ui.view">
    <field name="name">general_audit.standard_detail - search</field>
    <field name="model">general_audit.standard_detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <search />
    </field>
</record>

<record id="general_audit_standard_detail_view_tree" model="ir.ui.view">
    <field name="name">general_audit.standard_detail - tree</field>
    <field name="model">general_audit.standard_detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <tree>
            <field name="sequence" invisible="1" />
            <field name="type_id" />
            <field name="home_standard_line_id" invisible="1" />
            <field name="interim_standard_line_id" invisible="1" />
            <field name="previous_standard_line_id" invisible="1" />
            <field name="currency_id" invisible="1" />
            <field name="previous_balance" string="Previous" />
            <field name="interim_balance" string="Interim" />
            <field
                    name="extrapolation_balance"
                    optional="hide"
                    string="Extrapolation"
                />
            <field name="extrapolation_adjustment" optional="hide" />
            <field name="adjusted_extrapolation_balance" />
            <field name="home_statement_balance" string="Home Statement" />
            <field name="adjustment_balance" string="Adjustment" />
            <field name="audited_balance" string="Audited" />
            <field name="interim_avg" optional="hide" />
            <field name="extrapolation_avg" optional="hide" />
            <field name="home_statement_avg" optional="hide" />
            <field name="audited_avg" optional="hide" />
        </tree>
    </field>
</record>

<record id="general_audit_standard_detail_view_form" model="ir.ui.view">
    <field name="name">general_audit.standard_detail - form</field>
    <field name="model">general_audit.standard_detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="header" colspan="4" col="2">
                    <group name="header1" colspan="1" col="2">
                        <field name="sequence" />
                        <field name="type_id" />
                        <field name="currency_id" invisible="1" />
                    </group>
                    <group name="header2" colspan="1" col="2">
                        <field name="previous_balance" string="Previous" />
                        <field name="interim_balance" string="Interim" />
                        <field name="extrapolation_balance" string="Extrapolation" />
                        <field
                                name="extrapolation_adjustment"
                                string="Extrapolation Adjustment"
                            />
                        <field
                                name="adjusted_extrapolation_balance"
                                string="Adjusted Extrapolation"
                            />
                        <field name="home_statement_balance" string="Home Statement" />
                        <field name="adjustment_balance" string="Adjustment" />
                        <field name="audited_balance" string="Audited" />
                    </group>
                </group>
                <notebook />
            </sheet>
        </form>
    </field>
</record>
</odoo>
