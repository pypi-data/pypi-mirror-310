<odoo>
<record id="general_audit_detail_view_search" model="ir.ui.view">
    <field name="name">general_audit.detail - search</field>
    <field name="model">general_audit.detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <search />
    </field>
</record>

<record id="general_audit_detail_view_tree" model="ir.ui.view">
    <field name="name">general_audit.detail - tree</field>
    <field name="model">general_audit.detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <tree editable="top" delete="false">
            <field name="sequence" invisible="1" />
            <field name="account_id" />
            <field name="type_id" />
            <field name="home_line_id" invisible="1" />
            <field name="interim_line_id" invisible="1" />
            <field name="previous_line_id" invisible="1" />
            <field name="currency_id" invisible="1" />
            <field name="previous_balance" string="Previous" />
            <field name="interim_balance" string="Interim" />
            <field name="home_statement_balance" string="Home Statement" />
            <field name="adjustment_debit" string="Adjustment Dr." optional="hide" />
            <field name="adjustment_credit" string="Adjustment Cr." optional="hide" />
            <field name="adjustment_balance" string="Adjustment" />
            <field name="audited_balance" string="Audited" />
        </tree>
    </field>
</record>

<record id="general_audit_detail_view_form" model="ir.ui.view">
    <field name="name">general_audit.detail - form</field>
    <field name="model">general_audit.detail</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="header" colspan="4" col="2">
                    <group name="header1" colspan="1" col="2">
                        <field name="sequence" />
                        <field name="account_id" />
                        <field name="type_id" />
                        <field name="currency_id" invisible="1" />
                    </group>
                    <group name="header2" colspan="1" col="2">
                        <field name="interim_balance" string="Interim" />
                        <field name="home_statement_balance" string="Home Statement" />
                        <field name="previous_balance" string="Previous" />
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>
