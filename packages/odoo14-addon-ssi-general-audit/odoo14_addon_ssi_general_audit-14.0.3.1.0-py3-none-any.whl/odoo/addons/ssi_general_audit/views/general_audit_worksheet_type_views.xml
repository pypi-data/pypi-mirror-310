<odoo>

    <record id="general_audit_worksheet_type_view_search" model="ir.ui.view">
        <field name="name">general_audit_worksheet_type - search</field>
        <field name="model">general_audit_worksheet_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="general_audit_worksheet_type_view_tree" model="ir.ui.view">
        <field name="name">general_audit_worksheet_type - tree</field>
        <field name="model">general_audit_worksheet_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="before">
                    <field name="sequence" widget="handle" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_worksheet_type_view_form" model="ir.ui.view">
        <field name="name">general_audit_worksheet_type - form</field>
        <field name="model">general_audit_worksheet_type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="after">
                    <field name="sequence" />
                    <field name="parent_id" />
                    <field name="category_id" />
                    <!-- TODO -->
                    <!-- <field name="standard_item_ids" widget="many2many_tags" /> -->
                    <field name="max_number_allowed" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="general_audit_worksheet_type_action" model="ir.actions.act_window">
        <field name="name">Worksheet Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general_audit_worksheet_type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="general_audit_worksheet_type_menu"
        name="Types"
        parent="menu_configuration_worksheet"
        action="general_audit_worksheet_type_action"
        sequence="120"
        groups="general_audit_worksheet_type_group"
    />

</odoo>
