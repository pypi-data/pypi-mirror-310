<odoo>

    <record id="trial_balance_computation_item_view_search" model="ir.ui.view">
        <field name="name">trial_balance_computation_item - search</field>
        <field name="model">trial_balance_computation_item</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="trial_balance_computation_item_view_tree" model="ir.ui.view">
        <field name="name">trial_balance_computation_item - tree</field>
        <field name="model">trial_balance_computation_item</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="before">
                    <field name="sequence" widget="handle" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="trial_balance_computation_item_view_form" model="ir.ui.view">
        <field name="name">trial_balance_computation_item - form</field>
        <field name="model">trial_balance_computation_item</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="sequence" />
                    <field name="category" />
                </xpath>
                <xpath expr="//page[@name='note']" position="before">
                    <page name="page_computation" string="Computation">
                        <group name="group_computation_1" colspan="4" col="2">
                            <field
                                name="python_code"
                                colspan="2"
                                widget="ace"
                                nolabel="1"
                            />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="trial_balance_computation_item_action" model="ir.actions.act_window">
        <field name="name">Computation Items</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">trial_balance_computation_item</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="trial_balance_computation_item_menu"
        name="Computation Items"
        parent="menu_configuration_trial_balance"
        action="trial_balance_computation_item_action"
        sequence="140"
        groups="trial_balance_computation_item_group"
    />

</odoo>
