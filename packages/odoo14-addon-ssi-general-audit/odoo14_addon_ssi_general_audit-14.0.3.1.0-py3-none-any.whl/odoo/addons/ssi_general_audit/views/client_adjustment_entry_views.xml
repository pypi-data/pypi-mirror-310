<odoo>

    <record id="client_adjustment_entry_view_search" model="ir.ui.view">
        <field name="name">client_adjustment_entry form</field>
        <field name="model">client_adjustment_entry</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="client_adjustment_entry_view_tree" model="ir.ui.view">
        <field name="name">client_adjustment_entry tree</field>
        <field name="model">client_adjustment_entry</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_tree"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="general_audit_id" />
                    <field name="partner_id" widget="many2one_avatar" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="account_type_set_id" />
                    <field name="adjustment_type" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="client_adjustment_entry_view_form" model="ir.ui.view">
        <field name="name">client_adjustment_entry form</field>
        <field name="model">client_adjustment_entry</field>
        <field name="mode">primary</field>
        <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_form"
        />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="general_audit_id" domain="[('state','=','open')]" />
                    <field name="partner_id" widget="many2one_avatar" />
                    <field name="account_type_set_id" />
                    <field name="currency_id" />
                    <field name="adjustment_type" />
                </xpath>
                <xpath expr="//group[@name='header_right']" position="inside">
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="previous_date_start" />
                    <field name="previous_date_end" />
                    <field name="interim_date_start" />
                    <field name="interim_date_end" />
                </xpath>
                <xpath expr="//page[@name='note']" position="before">
                    <page name="detail" string="Details">
                        <field name="detail_ids">
                            <tree editable="top">
                                <field
                                    name="account_id"
                                    domain="[('partner_id','=',parent.partner_id)]"
                                />
                                <field name="name" />
                                <field name="currency_id" invisible="1" />
                                <field name="debit" sum="Total Debit" />
                                <field name="credit" sum="Total Credit" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </data>
        </field>
    </record>

    <record id="client_adjustment_entry_action" model="ir.actions.act_window">
        <field name="name">Adjustment Entries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">client_adjustment_entry</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'readonly_by_pass': True,
            'search_default_dom_draft':1,
            'search_default_dom_open':1,
            'search_default_dom_confirm':1,
            }
        </field>
    </record>

    <menuitem
        id="adjustment_entry_menu"
        name="Adjustment Entries"
        parent="menu_general_audit"
        action="client_adjustment_entry_action"
        sequence="40"
        groups="adjustment_entry_viewer_group"
    />


</odoo>
