<odoo>

    <record id="client_account_group_view_search" model="ir.ui.view">
        <field name="name">client_account_group - search</field>
        <field name="model">client_account_group</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="client_account_group_view_tree" model="ir.ui.view">
        <field name="name">client_account_group - tree</field>
        <field name="model">client_account_group</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="before">
                    <field name="sequence" widget="handle" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="client_account_group_view_form" model="ir.ui.view">
        <field name="name">client_account_group - form</field>
        <field name="model">client_account_group</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="sequence" />
                    <field name="normal_balance" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="client_account_group_action" model="ir.actions.act_window">
        <field name="name">Account Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">client_account_group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="client_account_group_menu"
        name="Account Groups"
        parent="menu_configuration_trial_balance"
        action="client_account_group_action"
        sequence="110"
        groups="client_account_group_group"
    />

</odoo>
