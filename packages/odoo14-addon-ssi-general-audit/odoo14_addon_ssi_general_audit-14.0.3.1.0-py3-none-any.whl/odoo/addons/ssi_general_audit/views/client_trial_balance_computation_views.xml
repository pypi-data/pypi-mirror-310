<odoo>
<record id="client_trial_balance_computation_view_search" model="ir.ui.view">
    <field name="name">client_trial_balance.computation - search</field>
    <field name="model">client_trial_balance.computation</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <search />
    </field>
</record>

<record id="client_trial_balance_computation_view_tree" model="ir.ui.view">
    <field name="name">client_trial_balance.computation - tree</field>
    <field name="model">client_trial_balance.computation</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <tree>
            <field name="computation_item_id" />
            <field name="amount" string="Amount" />
        </tree>
    </field>
</record>

<record id="client_trial_balance_computation_view_form" model="ir.ui.view">
    <field name="name">client_trial_balance.computation - form</field>
    <field name="model">client_trial_balance.computation</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group name="header" colspan="4" col="2">
                    <group name="header1" colspan="1" col="2">
                        <field name="computation_item_id" />
                    </group>
                    <group name="header2" colspan="1" col="2">
                        <field name="amount" string="Amount" />
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>
</odoo>
